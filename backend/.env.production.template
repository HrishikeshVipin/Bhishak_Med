# ⚠️ PRODUCTION ENVIRONMENT VARIABLES ⚠️
# Copy this file to .env for production deployment
# Replace all placeholder values with actual production credentials

# === DATABASE (PostgreSQL on Railway) ===
# Railway will automatically provide this as DATABASE_URL
DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:port/railway"

# === SERVER ===
NODE_ENV=production
PORT=5000

# === JWT AUTHENTICATION ===
# ⚠️ CRITICAL: Generate your own key with: openssl rand -base64 64
# NEVER use this template value in production!
JWT_SECRET=REPLACE_WITH_YOUR_GENERATED_JWT_SECRET_HERE
JWT_EXPIRES_IN=7d

# === FIELD ENCRYPTION ===
# ⚠️ CRITICAL: Generate your own key with: openssl rand -base64 32
# NEVER use this template value in production!
ENCRYPTION_KEY=REPLACE_WITH_YOUR_GENERATED_ENCRYPTION_KEY_HERE

# === RAZORPAY (PAYMENT GATEWAY) ===
# ⚠️ TODO: Get LIVE credentials from https://dashboard.razorpay.com/app/keys
# DO NOT use test keys in production!
RAZORPAY_KEY_ID=rzp_live_YOUR_LIVE_KEY_HERE
RAZORPAY_KEY_SECRET=YOUR_LIVE_SECRET_HERE
RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# === AGORA (VIDEO SDK) ===
# ⚠️ TODO: Create NEW project at https://console.agora.io/
# DO NOT reuse development credentials!
AGORA_APP_ID=YOUR_NEW_AGORA_APP_ID
AGORA_APP_CERTIFICATE=YOUR_NEW_AGORA_CERTIFICATE

# === FRONTEND ===
# Update with your actual Railway frontend URL
FRONTEND_URL=https://your-app.railway.app

# === FILE UPLOADS ===
UPLOAD_DIR=./uploads

# === CORS ===
# Add all your production domains
CORS_ORIGIN=https://your-app.railway.app
